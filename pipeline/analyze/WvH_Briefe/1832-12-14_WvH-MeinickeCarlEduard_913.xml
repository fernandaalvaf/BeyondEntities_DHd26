                  <addrLine>An</addrLine>
                  <addrLine>Herrn Rector Dr. Meinicke </addrLine>
                  <addrLine>Wohlgeboren in <placeName ref="Prenzlau">Prenzlau</placeName>.</addrLine>
               </address>
            </closer>
